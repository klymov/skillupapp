<!DOCTYPE html>
<html>
  <head>
    <title><%= (@title+ ' | ') if @title %>Skillupapp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
      <h1 class="my-0 mr-md-auto font-weight-bold"><%= @title if @title %></h1>
      <nav class="my-2 my-md-0 mr-md-3">
        <span class="p-2 text-dark"><%= link_to  "All orders", home_path %></span>
        <span class="p-2 text-dark"><%= link_to  "New order", new_order_path %></span>
        <span class="p-2 text-dark"><%= link_to  "All user", users_path %></span> 
        <span class="p-2 text-dark"><%= link_to  "New user", new_user_path %></span>
      </nav>
    </div>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
